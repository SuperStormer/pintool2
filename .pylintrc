[MASTER]
jobs=0
[MESSAGES CONTROL]

disable=
	missing-docstring,too-few-public-methods,
	bad-continuation,trailing-whitespace,
	logging-not-lazy,logging-fstring-interpolation,
	no-else-return,no-else-raise,

enable=similarities
[REPORTS]

[REFACTORING]

[BASIC]

[FORMAT]
max-line-length=100
indent-string="\t"
# allows global variables to be normal
const-rgx=[a-zA-Z_][a-zA-Z0-9_]{2,30}$
# normalize variable names
argument-rgx=[a-z_][a-z0-9_]{,30}$
attr-rgx=[a-z_][a-z0-9_]{,30}$
function-rgx=[a-z_][a-z0-9_]{1,30}$
method-rgx=[a-z_][a-z0-9_]{1,30}$
variable-rgx=[a-z_][a-z0-9_]{,30}$
inlinevar-rgx=[a-z_][a-z0-9_]{,30}$
module-rgx=[a-z_][a-z0-9_]{1,20}$
class-rgx=[A-Z_][a-zA-Z0-9]{2,30}$
[LOGGING]

[MISCELLANEOUS]

[SIMILARITIES]

[SPELLING]

[TYPECHECK]

[VARIABLES]

[CLASSES]

[DESIGN]

[IMPORTS]

[EXCEPTIONS]

